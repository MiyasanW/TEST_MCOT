{% extends "admin/change_form.html" %}
{% load i18n admin_urls static admin_modify %}

{% block extrahead %}
{{ block.super }}
<style>
    /* Modern Dashboard Layout */
    .dashboard-container {
        display: grid;
        grid-template-columns: 280px minmax(300px, 1fr) 300px;
        /* Wider Sidebar and Right col */
        /* Adjusted width */
        gap: 25px;
        padding: 20px 0;
        font-family: 'Sarabun', sans-serif;
        align-items: start;
    }

    .dashboard-card {
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
        padding: 20px;
        margin-bottom: 20px;
        border: 1px solid #f0f0f0;
    }

    .card-title {
        font-size: 16px;
        font-weight: 600;
        color: #1f2937;
        margin-bottom: 15px;
        display: flex;
        align-items: center;
        border-bottom: 1px solid #eee;
        padding-bottom: 10px;
    }

    .card-title i {
        margin-right: 8px;
        color: #4b5563;
    }

    /* Field Styling Overrides */
    .form-row {
        border: none !important;
        padding: 5px 0 !important;
    }

    .form-row label {
        font-weight: 500;
        color: #374151;
    }

    input[type="text"],
    input[type="email"],
    select,
    textarea {
        width: 100%;
        max-width: 100%;
        /* Prevent overflow */
        padding: 8px 12px;
        border: 1px solid #d1d5db;
        border-radius: 6px;
        font-size: 14px;
        transition: border-color 0.15s ease-in-out;
        box-sizing: border-box;
    }

    input:focus,
    select:focus,
    textarea:focus {
        border-color: #3b82f6;
        outline: none;
        box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
    }

    /* Status Badge in Header */
    .status-header-badge {
        padding: 8px 16px;
        border-radius: 20px;
        font-weight: 700;
        font-size: 14px;
        display: inline-block;
    }

    /* Custom Grid Areas */
    .col-left {
        grid-column: 1;
    }

    .col-center {
        grid-column: 2;
    }

    .col-right {
        grid-column: 3;
    }

    /* Mobile Responsive */
    @media (max-width: 1200px) {
        .dashboard-container {
            grid-template-columns: 1fr 300px;
        }

        .col-left {
            grid-column: 1;
            grid-row: 1;
        }

        .col-center {
            grid-column: 1;
            grid-row: 2;
        }

        .col-right {
            grid-column: 2;
            grid-row: 1 / span 2;
        }
    }

    @media (max-width: 900px) {
        .dashboard-container {
            grid-template-columns: 1fr;
        }

        .col-right {
            grid-column: 1;
        }
    }

    /* Hide Default Fieldsets */
    .module,
    .inline-group {
        border: none !important;
        background: none !important;
        box-shadow: none !important;
    }

    div.field-box {
        float: none !important;
        width: 100% !important;
    }

    /* Submit Row Fixed Bottom */
    .submit-row {
        position: fixed;
        bottom: 0;
        left: 0;
        right: 0;
        background: white;
        padding: 15px 40px;
        box-shadow: 0 -4px 6px -1px rgba(0, 0, 0, 0.1);
        z-index: 100;
        display: flex;
        justify-content: flex-end;
        gap: 10px;
    }

    body {
        padding-bottom: 80px;
    }

    /* Space for fixed footer */
</style>
{% endblock %}

{% block content %}
<form {% if has_file_field %}enctype="multipart/form-data" {% endif %}action="{{ form_url }}" method="post"
    id="{{ opts.model_name }}_form" novalidate>
    {% csrf_token %}
    {% block form_top %}{% endblock %}

    {% if errors %}
    <div class="note note-danger">
        <p class="errornote">
            {% if errors|length == 1 %}{% trans "Please correct the error below." %}{% else %}{% trans "Please correct
            the errors below." %}{% endif %}
        </p>
        {{ adminform.form.non_field_errors }}
    </div>
    {% endif %}

    <div class="dashboard-container">
        <!-- LEFT COLUMN: Customer & Dates -->
        <div class="col-left">
            <div class="dashboard-card">
                <div class="card-title"><i class="fas fa-user"></i> Customer Info</div>
                {% for field in adminform.form %}
                {% if field.name in 'customer_name,customer_phone,customer_email,customer_address,created_by' %}
                <div class="form-row field-{{ field.name }}">
                    <label for="{{ field.id_for_label }}">{{ field.label }}:</label>
                    {{ field }}
                    {% if field.help_text %}<div class="help">{{ field.help_text|safe }}</div>{% endif %}
                    {{ field.errors }}
                </div>
                {% endif %}
                {% endfor %}
            </div>

            <div class="dashboard-card">
                <div class="card-title"><i class="far fa-calendar-alt"></i> Date & Time</div>
                {% for field in adminform.form %}
                {% if field.name in 'start_time,end_time' %}
                <div class="form-row field-{{ field.name }}">
                    <label for="{{ field.id_for_label }}">{{ field.label }}:</label>
                    {{ field }}
                    {{ field.errors }}
                </div>
                {% endif %}
                {% endfor %}
            </div>
        </div>

        <!-- CENTER COLUMN: Items & Fulfillment -->
        <div class="col-center">
            <!-- Alert Section -->
            {% for field in adminform.form %}
            {% if field.name == 'issue_alert' %}
            {{ field }}
            {% endif %}
            {% endfor %}

            <!-- Booking Items (Inline) -->
            {% for inline_admin_formset in inline_admin_formsets %}
            {% if inline_admin_formset.opts.verbose_name_plural == 'รายการสินค้า (Booking Items)' %}
            <div class="dashboard-card">
                <div class="card-title"><i class="fas fa-list"></i> Products Requested</div>
                {% include inline_admin_formset.opts.template %}
            </div>
            {% endif %}
            {% endfor %}

            <!-- Fulfillment Section -->
            <div class="dashboard-card" style="border-left: 4px solid #10b981;">
                <div class="card-title" style="color: #059669; margin-bottom: 12px; display: block;">
                    <i class="fas fa-barcode"></i> Fulfillment (Assign Serials)
                </div>
                <div
                    style="display: block; margin-top: 5px; margin-bottom: 20px; font-size: 14px; color: #4b5563; line-height: 1.6;">
                    Select the specific <strong style="color: #000;">Serial Numbers</strong> for the products listed
                    above to deduct stock.
                </div>
                {% for field in adminform.form %}
                {% if field.name == 'equipment' %}
                <div class="form-row field-{{ field.name }}">
                    {{ field }}
                    {{ field.errors }}
                </div>
                <style>
                    /* Hacking the M2M Widget to look better */
                    .selector {
                        width: 100% !important;
                        float: none !important;
                    }

                    .selector-available,
                    .selector-chosen {
                        width: 48% !important;
                    }

                    .selector select {
                        height: 200px !important;
                    }
                </style>
                {% endif %}
                {% endfor %}
            </div>
        </div>

        <!-- RIGHT COLUMN: Status, Payment, System -->
        <div class="col-right">
            <!-- Status Card -->
            <div class="dashboard-card" style="text-align: center;">
                <div class="card-title" style="justify-content: center;"><i class="fas fa-traffic-light"></i> Status
                </div>
                {% for field in adminform.form %}
                {% if field.name == 'status' %}
                {{ field }}
                {% endif %}
                {% endfor %}
            </div>

            <!-- Payment Card -->
            <div class="dashboard-card">
                <div class="card-title"><i class="fas fa-money-bill-wave"></i> Payment</div>
                {% for field in adminform.form %}
                {% if field.name in 'payment_slip,payment_slip_preview' %}
                <div class="form-row field-{{ field.name }}">
                    <label for="{{ field.id_for_label }}">{{ field.label }}:</label>
                    {{ field }}
                </div>
                {% endif %}
                {% endfor %}
                <div style="margin-top: 15px; padding-top: 15px; border-top: 1px dashed #eee;">
                    <label>Summary:</label>
                    {% for field in adminform.form %}
                    {% if field.name == 'booking_summary' %}{{ field }}{% endif %}
                    {% endfor %}
                </div>
            </div>

            <!-- System Info -->
            <div class="dashboard-card">
                <div class="card-title"><i class="fas fa-server"></i> System Info</div>
                {% for field in adminform.form %}
                {% if field.name in 'created_at,updated_at' %}
                <div class="form-row field-{{ field.name }}" style="font-size: 12px; color: #666;">
                    <label style="width: auto;">{{ field.label }}:</label>
                    <span style="float: right;">{{ field.value|default:"-" }}</span>
                </div>
                {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>

    <!-- Hidden Fields (important for ModelForm) -->
    <div style="display: none;">
        {% for field in adminform.form %}
        {% if field.is_hidden %}{{ field }}{% endif %}
        {% endfor %}
    </div>

    <!-- Django's Submit Row -->
    {% submit_row %}

</form>

<!-- Include JS for Date Widgets -->
<script type="text/javascript" src="{% url 'admin:jsi18n' %}"></script>
{{ media }}
{% endblock %}